
@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

@if(Model.Count == 0)
{
    <p>No cheeses yet</p>
}
<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <th>@cheese.Name</th>
            <th>@cheese.Description</th>
            <th>@cheese.Type</th>
        </tr>
    }
</table>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
<p><a asp-controller="Cheese" asp-action="Remove">Remove Cheese</a></p>